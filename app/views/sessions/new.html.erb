<section class="new-user-header">
  <h1>Login to Access RememberingTheRhythm</h1>
</section>

<section class="login-form">
  <%= form_tag login_path do %>
  <%= label_tag :email %>
  <%= email_field_tag :email %>

  <%= label_tag :password_digest %>
  <%= password_field_tag :password_digest %>

  <%= submit_tag 'Log In' %>
<% end %>
</section>
