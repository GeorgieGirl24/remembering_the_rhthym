<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Picture Title</th>
      <th>Concert date</th>
      <th>User</th>
      <th>Concert</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= image_tag(photo.concert_photo.variant(resize: '100x100'))%></td>
        <td><%= photo.name %></td>
        <td><%= photo.concert_date %></td>
        <% if photo.user.avatar %>
          <td><%= image_tag(photo.user.avatar.variant(resize: '50x50')) %></td>
        <% else %>
          <td><%= photo.user.name %></td>
        <% end %>
        <td><%= photo.concert.band_name %></td>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_photo_path %>
